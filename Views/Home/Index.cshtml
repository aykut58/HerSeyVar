<div class="container mt-4">
    <div class="row">
        <!-- Kategoriler Sidebar -->
        <div class="col-md-3">
            <h3 class="text-center pb-3" style="font-weight: bold; border-bottom: 2px solid #007bff; color: #007bff;">
                Kategoriler</h3>
            <ul class="list-group shadow-sm">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("ByCategory", "Product", new { id = item.Id })"
                            style="text-decoration: none; color: #343a40;">
                            @item.Name
                        </a>
                        <span class="badge badge-primary badge-pill">10</span> <!-- İsteğe bağlı bir etiket -->
                    </li>
                }
            </ul>
        </div>



        <!-- Ana İçerik -->
        <div class="col-md-9">


            <!-- Slider -->
            <style>
                /* Slider sabit boyut */
                #homeSlider {
                    width: 100%;
                    height: 500px;
                    /* Sabit yükseklik belirleyin */
                }

                /* İçindeki görsellerin sabit boyuta sığması için */
                #homeSlider img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    /* Görseli kesmeden doldurur */
                }
            </style>

            <div id="homeSlider" class="carousel slide mt-5" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#homeSlider" data-bs-slide-to="0" class="active"
                        aria-current="true"></button>
                    <button type="button" data-bs-target="#homeSlider" data-bs-slide-to="1"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">

                        <img src="~/img/indirim.png" class="d-block w-100" alt="Slider Görsel 1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="color: black;">Büyük İndirimler</h5>
                            <p style="color: black;">Kaçırılmayacak fırsatlar sizi bekliyor!</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/firsat.png" class="d-block w-100" alt="Slider Görsel 2">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 style="color: black;">Büyük İndirimler</h5>
                            <p style="color: black;">Kaçırılmayacak fırsatlar sizi bekliyor!</p>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#homeSlider"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#homeSlider"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <!-- Ürün Kartları -->
            <div class="row text-center mt-5">
                <div class="col-md-4 d-flex">
                    <div class="card mb-4 shadow-sm flex-fill">
                        <img src="~/img/kategori.jpg" class="card-img-top" alt="Ürün Kategorisi 1"
                            style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Kategoriler</h5>
                            <p class="card-text">Farklı kategorilerde binlerce ürüne göz atın!</p>
                            <a href="/Category" class="btn btn-outline-primary mt-auto">Kategorileri Görüntüle</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 d-flex">
                    <div class="card mb-4 shadow-sm flex-fill">
                        <img src="~/img/yeni.jpg" class="card-img-top" alt="Yeni Gelenler"
                            style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Yeni Gelenler</h5>
                            <p class="card-text">En son ürünleri hemen keşfedin!</p>
                            <a href="/Product/New" class="btn btn-outline-primary mt-auto">Yeni Ürünler</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 d-flex">
                    <div class="card mb-4 shadow-sm flex-fill">
                        <img src="~/img/kampanya.jpg" class="card-img-top" alt="Kampanyalar"
                            style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Kampanyalar</h5>
                            <p class="card-text">Büyük indirim ve kampanyalardan haberdar olun!</p>
                            <a href="/Product/Sale" class="btn btn-outline-primary mt-auto">İndirimli Ürünler</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</div>
