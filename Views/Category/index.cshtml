@model IEnumerable<Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-4">Kategori Listesi</h2> <!-- Kategori listesi başlığı -->
        <a href="/Category/Create" class="btn btn-primary">Kategori Ekle</a> <!-- Yeni kategori ekleme butonu -->
    </div>

    <table class="table table-striped table-hover"> <!-- Kategori tablosu -->
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th> <!-- Kategori adı başlığı -->
                <th class="text-center" style="width: 150px;">İşlemler</th> <!-- İşlemler başlığı -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) // Her kategori için döngü
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td> <!-- Kategori adı gösterimi -->
                    <td class="text-center">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                            <i class="bi bi-pencil-square"></i> Düzenle <!-- Kategoriyi düzenleme butonu -->
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                            <i class="bi bi-trash"></i> Sil <!-- Kategoriyi silme butonu -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
